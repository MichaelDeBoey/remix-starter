{
  "private": true,
  "name": "remix-starter",
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss ./styles/root.css -o ./app/tailwind.css --minify",
    "dev": "npm run build:css && remix build && run-p dev:*",
    "dev:css": "postcss ./styles/root.css -o ./app/tailwind.css --watch",
    "dev:node": "cross-env NODE_ENV=development nodemon -r dotenv/config ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "lint": "eslint './app/**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:fix": "eslint './app/**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "cross-env NODE_ENV=production node -r dotenv/config ./server.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/express": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "autoprefixer": "^10.4.11",
    "cssnano": "^5.1.13",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=14"
  }
}
