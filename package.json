{
  "private": true,
  "name": "remix-starter",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss ./styles/root.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"node_modules/.bin/remix watch\" \"npm run start:dev\"",
    "dev:css": "postcss ./styles/root.css -o ./app/tailwind.css --watch",
    "lint": "eslint './app/**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:fix": "eslint './app/**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production node -r dotenv/config server/index.js",
    "start:dev": "cross-env NODE_ENV=development node -r dotenv/config server/index.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/express": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^14.3.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.16",
    "husky": "^7.0.4",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.3",
    "tailwindcss": "^3.0.16",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
